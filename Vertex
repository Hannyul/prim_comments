package prim;

/**
 *
 * @author maha
 */
public class Vertex {

    // the label(letter), cost , parent, location(index)
    char label;
    int weight;
    Vertex parent;
    int index;

    // empty constructor
    public Vertex() {
        
    }
    
    public Vertex(Vertex parent, int index, int weight, char label) {
        this.parent= parent;
        this.label = label;
        this.weight = weight;
        this.parent = parent;
        this.index= index;
    }
    
    
    // getters & setters for each variable 
    // to get and set the variable 
    public void setWeight(int weight) {
        this.weight = weight;
    }

    public int getWeight() {
        return weight;
    }

    public int getIndex() {
        return index;
    }

    public void setIndex(int index) {
        this.index = index;
    }
    
    
    public char getLabel() {
        return label;
    }

    public void setLabel(char label) {
        this.label = label;
    }

    public Vertex getParent() {
        return parent;
    }

    public void setParent(Vertex parent) {
        this.parent = parent;
    }


}
